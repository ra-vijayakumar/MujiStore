@model IEnumerable<MujiStore.Models.tblStreamServer>
@{
    var vtimereqPred = (string)ViewData["timereqPred"];
}
<h2 style="color:#ec2213; background-color:lavenderblush; margin-left:-4px; margin-bottom:15px;">@MujiStore.Resources.Resource.ExpectedDeliveryTime</h2>
@if (Model.Count() > 0)
{
    <div class="content">
        <table class="table" style="background-color:#ffffff; ">
            <tbody>
                <tr style="background-color:#bf5e6e; color:#ffffff;">
                    <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@MujiStore.Resources.Resource.StoreNumber</font></font></th>
                    <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@MujiStore.Resources.Resource.Storename</font></font></th>
                    <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@MujiStore.Resources.Resource.Distributionserver</font></font></th>
                    <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@MujiStore.Resources.Resource.UnDeliveredFileSize,</font></font></th>
                    <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@MujiStore.Resources.Resource.WanBandWidth,</font></font></th>
                    <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@MujiStore.Resources.Resource.EstimatedtimeRequired</font></font></th>
                </tr>
                @foreach (var item in Model)
                {

                    <tr style="background-color:#EEE;">
                        <td>@item.StoreID</td>
                        <td>@item.StoreName</td>
                        <td>
                            @Html.ActionLink(item.SSServer, "ViewServerDetails", new { ServerName = item.SSServer, ViewPage = "2" })
                        </td>
                        <td>@item.DriveCFree MB</td>
                        <td>@item.DriveDFree Kbytes/sec</td>
                        <td>@item.ExistsFileSize </td>
                    </tr>
                }

        </table>
        <br />
        <p><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@MujiStore.Resources.Resource.Totaltimerequiredforprediction @(vtimereqPred) </font></font></p>
        <p></p>
    </div>
}
else
{
    <p><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@MujiStore.Resources.Resource.Totaltimerequiredforprediction  @(vtimereqPred) </font></font></p>
}
