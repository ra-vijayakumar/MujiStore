@using PagedList.Mvc
@model PagedList.PagedList<MujiStore.Models.tblUser>

@{
    ViewBag.Title = MujiStore.Resources.Resource.VieUserMgmtViewLogBrowTitle;
}

<h2 style="color:#ec2213; background-color:lavenderblush; width:458px; margin-left:-4px; margin-bottom:15px;">@MujiStore.Resources.Resource.VieUserMgmtViewLogH2</h2>
<h2 style="color:#ec2213; margin-left:8px; background-color:lavenderblush; float:right; margin-top:-58px; height:30px; padding-top:0px;">
    <p style="margin-left:-3px;margin-top:-5px;">
        <a style="padding:0px; font-size:19px;" href=@Url.Action("Index","ViewLogs")>
            @MujiStore.Resources.Resource.CommonBackToViewLogs
        </a>
    </p>
</h2>
<table class="table fixed_header" style="background-color:#ffffff; width:100%; height:100px; margin-bottom:-50px; ">
    <thead>
        <tr style="background-color:#bf5e6e; color:#ffffff;">
            <th class="Title">
                @Html.DisplayNameFor(model => model.FirstOrDefault().UserID)
            </th>
            <th class="Title">
                @Html.DisplayNameFor(model => model.FirstOrDefault().UserName)
            </th>
            <th class="Description1">
                @Html.DisplayNameFor(model => model.FirstOrDefault().CRTDT)
            </th>
            <th class="vid">
                @Html.DisplayNameFor(model => model.FirstOrDefault().CRTCD)
            </th>
            <th class="vid">
                @Html.DisplayNameFor(model => model.FirstOrDefault().UPDDT)
            </th>
            <th class="vid">
                @Html.DisplayNameFor(model => model.FirstOrDefault().IPAddress)
            </th>


        </tr>
    </thead>

    <tbody style="width:100%">
        @foreach (var item in Model)
        {
            <tr style="background-color:#EEE;">
                <td class="Description">
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td class="Description">
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td class="vid" style="font-weight:normal;">
                    @Html.DisplayFor(modelItem => item.CRTDT)
                </td>
                <td class="Folder">
                    @Html.DisplayFor(modelItem => item.CRTCD)
                </td>
                <td class="Folder">
                    @Html.DisplayFor(modelItem => item.UPDDT)
                </td>
                <th class="vid" style="font-weight:normal;">
                    @Html.DisplayFor(ModelItem => item.IPAddress)
                </th>

            </tr>
        }
    </tbody>
</table>
<br />
<br />
<br />
<br />
@if (Model.PageSize < Model.TotalItemCount)
{
<div>
    @MujiStore.Resources.Resource.CommonPage @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) @MujiStore.Resources.Resource.CommonOf @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("UserMgmtViewLog",
         new { page }))
</div>
}